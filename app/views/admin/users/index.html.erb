<div class="usuarios-container">
  <h1>Usuários</h1>
  <% if @users.any? %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Email</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-warning' %>
              <%= link_to 'Excluir', admin_user_path(user), method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="no-users-message">Nenhum usuário cadastrado.</p>
  <% end %>
  <%= link_to 'Adicionar Novo Usuário', new_admin_user_path, class: 'btn btn-success' %>
</div>
<style>
  /* Estilização da página de Usuários */
  .usuarios-container {
  margin: 20px auto;
  max-width: 900px;
  background-color: var(--light);
  padding: 20px;
  border: 1px solid var(--secondary);
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .usuarios-container h1 {
  color: var(--primary);
  font-size: 24px;
  margin-bottom: 20px;
  text-align: center;
  }

  .usuarios-container table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
  }

  .usuarios-container table th,
  .usuarios-container table td {
  padding: 12px;
  border: 1px solid var(--secondary);
  text-align: left;
  font-size: 16px;
  }

  .usuarios-container table th {
  background-color: var(--secondary);
  color: var(--light);
  font-weight: bold;
  text-transform: uppercase;
  }

  .usuarios-container table td {
  background-color: var(--light);
  color: var(--dark);
  }

  .usuarios-container table tr:hover {
  background-color: rgba(216, 19, 36, 0.1);
  }

  .usuarios-container .btn {
  margin: 0 5px;
  padding: 8px 15px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: bold;
  text-transform: uppercase;
  transition: background-color 0.3s ease;
  }

  .usuarios-container .btn-warning {
  background-color: #ffb703;
  color: #fff;
  }

  .usuarios-container .btn-warning:hover {
  background-color: #ffa500;
  }

  .usuarios-container .btn-danger {
  background-color: #e63946;
  color: #fff;
  }

  .usuarios-container .btn-danger:hover {
  background-color: #d62828;
  }

  .usuarios-container .btn-success {
  background-color: var(--primary);
  color: #fff;
  margin-top: 20px;
  display: inline-block;
  }

  .usuarios-container .btn-success:hover {
  background-color: #b90f1c;
  }

  .usuarios-container .no-users-message {
  text-align: center;
  color: var(--secondary);
  font-size: 18px;
  margin-top: 30px;
  }
</style>