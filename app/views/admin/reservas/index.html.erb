<h1 class="mb-4">Reservas de Rodas</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>E-mail</th>
      <th>Roda</th>
      <th>Preço</th>
      <th>Data da Reserva</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each_with_index do |pedido, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= pedido.nome %></td>
        <td><%= pedido.telefone %></td>
        <td><%= pedido.email %></td>
        <td><%= pedido.roda.titulo %></td>
        <td><%= number_to_currency(pedido.roda.preco, locale: :'pt-BR') %></td>
        <td><%= pedido.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td>
          <%= link_to 'Cancelar', admin_reserva_path(pedido), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "Tem certeza que deseja cancelar esta reserva?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
