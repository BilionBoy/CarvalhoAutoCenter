<div class="d-flex">
  <main class="flex-grow-1 p-4 samsung-dark-theme">
    <header class="mb-4">
      <h1 class="text-white fw-bold">Bem-vindo ao Painel Administrativo</h1>
      <p class="lead text-muted">Gerencie com facilidade o catálogo de rodas, usuários, configurações e muito mais.</p>
    </header>
    <section class="row">
      <div class="col-12 col-md-4 mb-3">
        <div class="card text-white bg-primary">
          <div class="card-body">
            <i class="bi bi-person-fill fs-3 mb-2"></i>
            <h5 class="card-title">Usuários Cadastrados</h5>
            <p class="card-text"><%= User.count %> usuários</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4 mb-3">
        <div class="card text-white bg-success">
          <div class="card-body">
            <i class="bi bi-gear-fill fs-3 mb-2"></i>
            <h5 class="card-title">Rodas Cadastradas</h5>
            <p class="card-text"><%= Roda.count %> rodas</p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4 mb-3">
        <div class="card text-white bg-warning">
          <div class="card-body">
            <i class="bi bi-calendar-check-fill fs-3 mb-2"></i>
            <h5 class="card-title">Reservas Recentes</h5>
            <p class="card-text"><%= Pedido.where(status: 'reservado').count %> reservas ativas</p>
          </div>
        </div>
      </div>
    </section>
    <!-- Tarefas Recentes ou Ações -->
    <section class="mb-4">
      <h2 class="text-white">Ações Recentes</h2>
      <ul class="list-unstyled">
        <li><%= link_to "Gerenciar Usuários", admin_users_path, class: 'btn btn-primary mb-2' %></li>
        <li><%= link_to "Gerenciar Rodas", admin_rodas_path, class: 'btn btn-success mb-2' %></li>
        <li><%= link_to "Ver Reservas", admin_reservas_path, class: 'btn btn-danger mb-2' %></li>
        <li><%= link_to "Adicionar Nova Roda", new_admin_roda_path, class: 'btn btn-info mb-2' %></li>
      </ul>
    </section>
  </main>
</div>
