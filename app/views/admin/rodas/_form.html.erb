<div class="cadastro-roda-container">
  <h1>Cadastro de Nova Roda</h1>
  <%= form_with(model: [:admin, @roda], local: true, html: { multipart: true }) do |form| %>
    <div class="mb-3">
      <%= form.label :titulo, "Título", class: "form-label" %>
      <%= form.text_field :titulo, class: "form-control", placeholder: "Digite o título da roda" %>
    </div>
    <div class="mb-3">
      <%= form.label :descricao, "Descrição", class: "form-label" %>
      <%= form.text_area :descricao, class: "form-control", placeholder: "Descreva a roda" %>
    </div>
    <div class="mb-3">
      <%= form.label :preco, "Preço", class: "form-label" %>
      <%= form.number_field :preco, class: "form-control", step: 0.01, placeholder: "Ex: 49.99" %>
    </div>
    <div class="mb-3">
      <%= form.label :imagem, "Imagem da Roda", class: "form-label" %>
      <%= form.file_field :imagem, class: "form-control" %>
    </div>
    <div class="text-center mt-4">
      <%= form.submit "Salvar", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
<style>
  /* Cadastro de Nova Roda */
  .cadastro-roda-container {
  background-color: var(--light);
  padding: 20px;
  border: 1px solid var(--secondary);
  border-radius: 10px;
  max-width: 600px;
  margin: 20px auto;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .cadastro-roda-container h1 {
  color: var(--secondary);
  text-align: center;
  margin-bottom: 20px;
  }

  .cadastro-roda-container .form-label {
  color: var(--secondary);
  font-weight: bold;
  }

  .cadastro-roda-container .form-control {
  border: 1px solid var(--secondary);
  border-radius: 8px;
  padding: 10px;
  color: var(--dark);
  }

  .cadastro-roda-container .form-control:focus {
  border-color: var(--primary);
  box-shadow: 0 0 5px var(--primary);
  outline: none;
  }

  .cadastro-roda-container .btn-primary {
  background-color: var(--primary);
  border: none;
  color: #fff;
  font-weight: bold;
  padding: 10px;
  border-radius: 8px;
  width: 100%;
  transition: background-color 0.3s ease;
  }

  .cadastro-roda-container .btn-primary:hover {
  background-color: #b90f1c;
  }
</style>