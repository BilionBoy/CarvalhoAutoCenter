<h1>Editar Rodas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @rodas.each do |roda| %>
      <tr>
        <td><%= roda.titulo %></td>
        <td><%= roda.descricao %></td>
        <td><%= number_to_currency(roda.preco) %></td>
        <td>
          <%= link_to "Editar", edit_admin_roda_path(roda), class: "btn btn-warning" %>
          <%= button_to "Remover", admin_roda_path(roda), method: :delete, data: { confirm: "Tem certeza que deseja remover?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Adicionar Nova Roda", new_admin_roda_path, class: "btn btn-primary" %>
