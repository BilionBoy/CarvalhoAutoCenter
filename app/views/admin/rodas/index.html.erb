<div class="tabela-rodas-container">
  <h1>Editar Rodas</h1>
  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @rodas.each do |roda| %>
        <tr>
          <td><%= roda.titulo %></td>
          <td><%= roda.descricao %></td>
          <td><%= number_to_currency(roda.preco) %></td>
          <td>
            <%= link_to "Editar", edit_admin_roda_path(roda), class: "btn btn-dark btn-sm" %>
            <%= button_to "Remover", admin_roda_path(roda), method: :delete, data: { confirm: "Tem certeza que deseja remover?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-4">
    <%= link_to "Adicionar Nova Roda", new_admin_roda_path, class: "btn btn-success" %>
  </div>
</div>
<style>
  /* Tabela de Rodas */
  .tabela-rodas-container {
  margin: 20px auto;
  max-width: 900px;
  background-color: var(--light);
  padding: 20px;
  border: 1px solid var(--secondary);
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .tabela-rodas-container h1 {
  color: var(--primary);
  margin-bottom: 20px;
  }

  .tabela-rodas-container table {
  width: 100%;
  border-collapse: collapse;
  }

  .tabela-rodas-container table th,
  .tabela-rodas-container table td {
  padding: 12px;
  border: 1px solid var(--secondary);
  text-align: left;
  }

  .tabela-rodas-container table th {
  background-color: var(--secondary);
  color: var(--light);
  }

  .tabela-rodas-container table td {
  background-color: var(--light);
  }

  .tabela-rodas-container .btn-warning {
  background-color: #ffb703;
  color: #fff;
  }

  .tabela-rodas-container .btn-warning:hover {
  background-color: #ffa500;
  }

  .tabela-rodas-container .btn-danger {
  background-color: #e63946;
  color: #fff;
  }

  .tabela-rodas-container .btn-danger:hover {
  background-color: #d62828;
  }
</style>