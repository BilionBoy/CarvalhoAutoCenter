<%= render "shared/navbar" %>
<section class="section-products mt-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-8 col-lg-6">
        <!-- Você pode adicionar um título ou algum texto aqui, se necessário -->
      </div>
    </div>
    <div class="row">
      <% @rodas.each do |roda| %>
        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
          <div class="single-product card shadow-sm border-0 rounded">
            <div class="part-1 card-img-top overflow-hidden">
              <%= image_tag roda.imagem, class: "product-image img-fluid w-100 h-100" if roda.imagem.present? %>
            </div>
            <div class="part-2 card-body">
              <h3 class="product-title card-title mb-2"><%= roda.titulo %></h3>
              <h4 class="product-price card-text mb-3"><%= number_to_currency(roda.preco, locale: :'pt-BR') %></h4>
              <p class="product-category text-muted"><strong>Categoria:</strong> <%= roda.categoria.present? ? roda.categoria.capitalize : "Não definida" %></p>
              <p class="product-description text-muted"><%= truncate(roda.descricao, length: 100) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "shared/booking" %>
<%= render "shared/footer" %>