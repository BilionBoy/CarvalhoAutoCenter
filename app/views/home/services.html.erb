<%= render "shared/navbar" %>
<section class="section-products mt-4">
  <div class="container">
    <!-- Filtros de Busca -->
    <div class="row justify-content-center text-center mb-4">
      <div class="col-md-8 col-lg-6">
        <h2 class="text-primary mb-3 font-weight-bold">Filtros de Busca</h2>
        <%= search_form_for @q, url: services_path do |f| %>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Categoria</th>
                  <th scope="col">Título</th>
                  <th scope="col">Ação</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <%= f.select :categoria_eq, [["Nova", "nova"], ["Semi Nova", "semi nova"], ["Todas", ""]], class: "form-control form-control-sm", aria: { label: "Filtrar por categoria" } %>
                  </td>
                  <td>
                    <%= f.text_field :titulo_cont, class: "form-control form-control-sm", placeholder: "Digite o título", aria: { label: "Filtrar por título" } %>
                  </td>
                  <td>
                    <%= f.submit "Buscar", class: "btn btn-primary btn-sm w-100" %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Exibição das Rodas -->
    <div class="row">
      <% if @rodas.any? %>
        <% @rodas.each do |roda| %>
          <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card shadow-sm border-0 rounded">
              <div class="card-img-top overflow-hidden">
                <%= image_tag roda.imagem, class: "img-fluid w-100", alt: roda.titulo if roda.imagem.present? %>
              </div>
              <div class="card-body p-3">
                <h5 class="card-title text-primary mb-2"><%= roda.titulo %></h5>
                <p class="card-text text-dark font-weight-bold"><%= number_to_currency(roda.preco, locale: :'pt-BR') %></p>
                <p class="text-muted"><strong>Categoria:</strong> <%= roda.categoria.present? ? roda.categoria.capitalize : "Não definida" %></p>
                <p class="text-muted"><%= truncate(roda.descricao, length: 90) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12 text-center">
          <p class="text-muted">Nenhuma roda encontrada para os filtros selecionados.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "shared/footer", footer_class: @no_results ? "footer-neutral" : "" %>
