<%= render "shared/navbar" %>
<section class="section-products mt-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-8 col-lg-6">
      </div>
    </div>
    <div class="row">
      <% @rodas.each do |roda| %>
        <div class="col-md-6 col-lg-4 col-xl-3">
          <div class="single-product">
            <div class="part-1">
              <%= image_tag roda.imagem, class: "product-image" if roda.imagem.present? %>
            </div>
            <div class="part-2">
              <h3 class="product-title"><%= roda.titulo %></h3>
              <h4 class="product-price"><%= number_to_currency(roda.preco) %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "shared/booking" %>
<%= render "shared/footer" %>
