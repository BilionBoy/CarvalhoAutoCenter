<div class="venda-container">
  <div class="card samsung-card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0"><i class="bi bi-cart-plus me-2"></i>Registrar Nova Venda</h2>
    </div>
    <div class="card-body">
      <%= simple_form_for(@venda) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="col-md-12 mb-3">
            <%= f.input :descricao, 
                        label: "Descrição do Produto", 
                        placeholder: "Ex: iPhone 13 Pro Max 256GB", 
                        input_html: { class: 'form-control bg-dark text-white' } %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.input :valor, label: "Valor (R$)", placeholder: "0,00", hint: "Informe o valor da venda", input_html: { class: 'form-control bg-dark text-white' } %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.input :data, as: :string, label: "Data da Venda", input_html: { class: "form-control bg-dark text-white", placeholder: "dd/mm/aaaa", autocomplete: "off", id: "data_venda" } %>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-md-12">
            <%= f.input :user_id, label: "Vendedor", collection: User.all.pluck(:email, :id), prompt: "Selecione o vendedor", input_html: { class: 'form-select bg-dark text-white' } %>
          </div>
        </div>
        <div class="form-actions d-flex justify-content-between">
          <%= link_to "Cancelar", vendas_path, class: "btn btn-outline-light" %>
          <%= f.button :submit, "Salvar Venda", class: "btn samsung-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  document.addEventListener('turbo:load', () => {
  Inputmask("99/99/9999").mask(document.querySelectorAll('input[data-date-mask]'));
  });
</script>
