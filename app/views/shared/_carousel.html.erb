<div class="container-fluid p-0 mb-5">
  <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "logo.jpg", class: "w-50", alt: "Carousel Image 1" %>
        <div class="carousel-caption d-flex align-items-center">
          <div class="container">
            <div class="row align-items-center justify-content-center justify-content-lg-start">
              <div class="col-10 col-lg-7 text-center text-lg-start">
                <h6 class="text-white text-uppercase mb-3 animated slideInDown">// Manunteção de Rodas//</h6>
                <h1 class="display-3 text-white mb-4 pb-3 animated slideInDown">A Mecânica de carros e rodas mais eficiente do Estado de</h1>
                <%= link_to "Learn More", "#", class: "btn btn-primary py-3 px-5 animated slideInDown" %>
              </div>
              <div class="col-lg-5 d-none d-lg-flex animated zoomIn">
                <%= image_tag "rodas.jpg", class: "img-fluid", alt: "Carousel Image 1" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="carousel-item">
        <%= image_tag "carousel-bg-2.jpg", class: "w-100", alt: "Carousel Image 2" %>
        <div class="carousel-caption d-flex align-items-center">
          <div class="container">
            <div class="row align-items-center justify-content-center justify-content-lg-start">
              <div class="col-10 col-lg-7 text-center text-lg-start">
                <h6 class="text-white text-uppercase mb-3 animated slideInDown">// Manuntenção de Rodas e Carros //</h6>
                <h1 class="display-3 text-white mb-4 pb-3 animated slideInDown">Mais qualificada da região Norte</h1>
                <%= link_to "Learn More", "#", class: "btn btn-primary py-3 px-5 animated slideInDown" %>
              </div>
              <div class="col-lg-5 d-none d-lg-flex animated zoomIn">
                <%= image_tag "carousel-2.png", class: "img-fluid", alt: "Carousel Image 2" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
